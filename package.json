{
  "name": "gachapon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "ANCHOR_PROVIDER_URL=http://127.0.0.1:8899 ANCHOR_WALLET=$HOME/.config/solana/id.json ts-mocha -p tsconfig.json -t 1000000 tests/game.spec.ts",
    "test:all": "ANCHOR_PROVIDER_URL=http://127.0.0.1:8899 ANCHOR_WALLET=$HOME/.config/solana/id.json ts-mocha -p tsconfig.json -t 1000000 tests/**/*.ts",
    "test:devnet": "ANCHOR_PROVIDER_URL=https://api.devnet.solana.com ANCHOR_WALLET=./phantom-devnet-keypair.json ts-mocha -p tsconfig.json -t 1000000 tests/game.devnet.spec.ts",
    "test:devnet:no-airdrop": "SKIP_AIRDROP=true ANCHOR_PROVIDER_URL=https://api.devnet.solana.com ANCHOR_WALLET=./phantom-devnet-keypair.json ts-mocha -p tsconfig.json -t 1000000 tests/game.devnet.spec.ts",
    "test:devnet:with-token": "SKIP_AIRDROP=true ANCHOR_PROVIDER_URL=https://api.devnet.solana.com ANCHOR_WALLET=./phantom-devnet-keypair.json ts-mocha -p tsconfig.json -t 1000000 tests/game.devnet.spec.ts",
    "test:with-validator": "bash run-tests.sh",
    "test:devnet:query": "ts-node scripts/test-devnet.ts",
    "anchor:build": "export PATH=\\\"$HOME/.avm/bin:$PATH\\\" && anchor build && node scripts/copy-idl.js",
    "anchor:test": "export PATH=\\\"$HOME/.avm/bin:$HOME/.local/share/solana/install/active_release/bin:$PATH\\\" && anchor test",
    "anchor:deploy:devnet": "export PATH=\\\"$HOME/.avm/bin:$HOME/.local/share/solana/install/active_release/bin:$PATH\\\" && anchor deploy --provider.cluster devnet --provider.wallet ./phantom-devnet-keypair.json",
    "dev": "bash start-dev.sh",
    "fix:setup": "bash fix-anchor-solana.sh",
    "copy:idl": "node scripts/copy-idl.js",
    "build:devnet": "pnpm run anchor:build && pnpm run copy:idl"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/spl-token": "^0.4.7",
    "@solana/web3.js": "^1.95.0",
    "@types/bn.js": "^5.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
